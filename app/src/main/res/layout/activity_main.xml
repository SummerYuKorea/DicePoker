<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSkyBlue"
    tools:context="edu.android.and_dicepoker.MainActivity">

    <TabHost
        android:id="@android:id/tabhost"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">


                        <fragment
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:name="edu.android.and_dicepoker.GameStartFragment"
                            android:id="@+id/fragment6"
                            tools:layout="@layout/fragment_game_start" />
                    </FrameLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:tools="http://schemas.android.com/tools"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/activity_achievement"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorSkyBlue"
                            tools:context="edu.android.and_dicepoker.AchievementActivity">


                            <TextView
                                android:id="@+id/textViewSt2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Achievement"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="40sp"
                                android:gravity="center"
                                android:layout_toRightOf="@+id/imageViewSt"
                                android:layout_toEndOf="@+id/imageViewSt"
                                android:layout_alignParentTop="true"
                                android:layout_alignBottom="@+id/imageViewSt" />

                            <ImageView
                                android:id="@+id/imageViewSt"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/icon_100_07"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <ImageView
                                android:id="@+id/imageViewSt3"
                                android:layout_width="340dp"
                                android:layout_height="440dp"
                                android:layout_below="@+id/textViewSt2"
                                android:layout_centerHorizontal="true"
                                app:srcCompat="@drawable/square" />

                            <ImageView
                                android:id="@+id/imageViewSt2"
                                android:layout_width="340dp"
                                android:layout_height="440dp"
                                android:layout_alignLeft="@+id/imageViewSt3"
                                android:layout_alignStart="@+id/imageViewSt3"
                                android:layout_below="@+id/textViewSt2"
                                app:srcCompat="@drawable/border2" />


                        </RelativeLayout>

                        <fragment
                            android:layout_width="330dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="72dp"
                            android:layout_marginLeft="28dp"
                            android:name="edu.android.and_dicepoker.AchievementFragment"
                            android:id="@+id/fragment2"/>

                    </FrameLayout>




                </LinearLayout>


                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:context="edu.android.and_dicepoker.StoreActivity">

                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            xmlns:tools="http://schemas.android.com/tools"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorSkyBlue"
                            tools:context="edu.android.and_dicepoker.StoreFragment"
                            android:id="@+id/fragmentStore">

                            <!-- TODO: Update blank fragment layout -->

                            <TextView
                                android:id="@+id/textViewSb2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Store"
                                android:textColor="@color/colorWhite"
                                android:textStyle="bold"
                                android:textSize="40sp"
                                android:gravity="center"
                                android:layout_toRightOf="@+id/imageViewSb"
                                android:layout_toEndOf="@+id/imageViewSb"
                                android:layout_alignParentTop="true"
                                android:layout_alignBottom="@+id/imageViewSb" />

                            <ImageView
                                android:id="@+id/imageViewSb"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                app:srcCompat="@drawable/icon_100_06"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <ImageView
                                android:id="@+id/imageViewSb3"
                                android:layout_width="340dp"
                                android:layout_height="440dp"
                                app:srcCompat="@drawable/square"
                                android:layout_below="@+id/textViewSb2"
                                android:layout_centerHorizontal="true" />

                            <ImageView
                                android:id="@+id/imageViewSb2"
                                android:layout_width="340dp"
                                android:layout_height="440dp"
                                app:srcCompat="@drawable/border2"
                                android:layout_below="@+id/textViewSb2"
                                android:layout_alignLeft="@+id/imageViewSb3"
                                android:layout_alignStart="@+id/imageViewSb3" />


                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="35dp"
                                android:layout_height="35dp"

                                android:layout_marginLeft="240dp"

                                android:layout_marginTop="5dp"
                                app:srcCompat="@drawable/shop_coin_01" />

                            <TextView
                                android:id="@+id/textStoreStar"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorWhite"
                                android:layout_marginRight="12dp"
                                android:text="X 10000"
                                android:textSize="23dp"
                                android:gravity="center"
                                android:textStyle="bold"
                                android:layout_alignTop="@+id/imageView11"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignBottom="@+id/imageView11" />
                        </RelativeLayout>

                        <fragment
                            android:layout_width="330dp"
                            android:layout_height="420dp"
                            android:layout_marginTop="72dp"
                            android:layout_marginLeft="28dp"
                            android:name="edu.android.and_dicepoker.StoreFragment"
                            android:id="@+id/fragment4" />
                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        >


                        <fragment
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:name="edu.android.and_dicepoker.MyInfoFragment"
                            android:id="@+id/fragment5" />
                    </FrameLayout>



                </LinearLayout>

            </FrameLayout>


            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:layout_marginBottom="-4.5px"

                />
        </LinearLayout>
    </TabHost>
</LinearLayout>